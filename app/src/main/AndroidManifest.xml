<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tuansbook.lvxing">

    <!--网络-->
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <!--读写SD卡-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <!--录音-->
    <uses-permission android:name="android.permission.RECORD_AUDIO"></uses-permission>

    <application
        android:name=".Common.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--仿微信选择图片Activity-->
        <activity android:name=".Activity.Select_or_Picture_Activity" android:screenOrientation="portrait"></activity>
        <!--登录页面-->
        <activity android:name=".Activity.LoginActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"></activity>
        <!--注册页面-->
        <activity android:name=".Activity.RegisterActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"></activity>
        <!--视频库-->
        <activity android:name=".Activity.VideoHouseActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"></activity>
        <!--疯狂小片-->
        <activity android:name=".Activity.XiaoPianActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"></activity>
        <!--侣行记忆-->
        <activity android:name=".Activity.LvXingMemoryActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"></activity>
        <!--新鲜在线-->
        <activity android:name=".Activity.XinXianActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"></activity>
        <!--视频详情页-->
        <activity android:name=".Activity.VideoXiangQingActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"></activity>
        <!--评论列表页面-->
        <activity android:name=".Activity.AllPingLunActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"></activity>
        <!--搜索页面-->
        <activity android:name=".Activity.SearchActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"></activity>
        <!--会员及开通会员-->
        <activity android:name=".Activity.KaiTongHYActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"></activity>
        <!--图片详情页-->
        <activity android:name=".Activity.TuPianXiangQingActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"></activity>
        <!--举报-->
        <activity android:name=".Activity.JuBaoActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"></activity>
        <!--全部圈子-->
        <activity android:name=".Activity.AllQuanZiActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"></activity>
        <!--帖子详情-->
        <activity android:name=".Activity.TieZiXiangQingActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"></activity>
        <!--申请开圈-->
        <activity android:name=".Activity.CreateQuanZiActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"></activity>
        <!--我的发布-->
        <activity android:name=".Activity.MyTieZiActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"/>
        <!--我的关注-->
        <activity android:name=".Activity.MyFocusActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"/>
        <!--我的粉丝-->
        <activity android:name=".Activity.MyFansActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"/>
        <!--我的通知-->
        <activity android:name=".Activity.MyNoticeActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"/>
        <!--我的收藏-->
        <activity android:name=".Activity.MyCollectionActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"/>
        <!--我的设置-->
        <activity android:name=".Activity.MySettingActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"/>
        <!--图片下载记录-->
        <activity android:name=".Activity.MyPicRecordActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"/>
        <!--意见反馈-->
        <activity android:name=".Activity.FeedbackActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"/>
        <!--侣店-->
        <activity android:name=".Activity.LikeTaobaoActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"></activity>
        <!--商品详情-->
        <activity android:name=".Activity.ProductXiangQingActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"></activity>
        <!--签到-->
        <activity android:name=".Activity.SignActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"></activity>
        <!--发布-->
        <activity android:name=".Activity.PublishActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"></activity>
        <!--修改个人信息-->
        <activity android:name=".Activity.ModifyInformationActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"></activity>
        <!--修改密码、验证手机号码-->
        <activity android:name=".Activity.PhoneVerifyActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"></activity>
    </application>

</manifest>